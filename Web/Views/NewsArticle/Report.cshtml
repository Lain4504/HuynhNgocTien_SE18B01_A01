@model IEnumerable<DAL.Entities.NewsArticle>

@{
    ViewData["Title"] = "News Report";
}

<div class="card shadow">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">News Report</h5>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
    <div class="card-body">
        <form asp-action="Report" method="get" class="row mb-4">
            <div class="col-md-4">
                <div class="mb-3">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                </div>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Generate Report
                </button>
                <a asp-action="Report" class="btn btn-outline-secondary">Clear</a>
            </div>
        </form>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Status</th>
                            <th>Created Date</th>
                            <th>Created By</th>
                            <th>Modified Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NewsTitle</td>
                                <td>@item.Category?.CategoryName</td>
                                <td>
                                    @if ((bool)item.NewsStatus!)
                                    {
                                        <span class="badge bg-success">Published</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Draft</span>
                                    }
                                </td>
                                <td>@item.CreatedDate?.ToString("MM/dd/yyyy HH:mm")</td>
                                <td>@item.CreatedBy?.AccountName</td>
                                <td>@item.ModifiedDate?.ToString("MM/dd/yyyy HH:mm")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3">
                <div class="alert alert-info">
                    Total Articles: @Model.Count()<br />
                    Published: @Model.Count(x => (bool)x.NewsStatus!)<br />
                    Drafts: @Model.Count(x => (bool)(!x.NewsStatus)!)
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                No news articles found for the selected date range.
            </div>
        }
    </div>
</div> 